// GetN

define get2 : ('a 'b -> 'a 'b 'a)
{{
  desc:
    Pushes a copy of the value from the second location on the stack to the top.
  test:
    in: 1 2 get2
    out: 1 2 1
  tags:
    stack,level1
}}
{ [dup] dip swap }

define get3 : ('a 'b 'c -> 'a 'b 'c 'a)
{{
  desc:
    Pushes a copy of the value from the third location on the stack to the top.
  test:
    in: 1 2 3 get3
    out: 1 2 3 1
  tags:
    stack,level1
}}
{ [get2] dip swap }

