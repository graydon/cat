// BuryN

define bury2 : ('a 'b 'c -> 'c 'a 'b)
{{
  test:
    in: 1 2 3 bury2
    out: 3 1 2
  semantics:
    $a $b $c bury2 == $c $a $b
}}
{ bury }

define bury3 : ('a 'b 'c 'd -> 'd 'a 'b 'c)
{{
  test:
    in: 1 2 3 4 bury3
    out: 4 1 2 3
  semantics:
    $a $b $c $d bury3 == $d $a $b $c
