// DigN

define dig2 : ('a 'b 'c -> 'b 'c 'a)
{{
  test:
    in: 1 2 3 dig2
    out: 2 3 1
  semantics:
    $a $b $c dig2 == $b $c $a
}}
{ dig }

define dig3 : ('a 'b 'c 'd -> 'b 'c 'd 'a)
{{
  test:
    in: 1 2 3 4 dig3
    out: 2 3 4 1
  semantics:
    $a $b $c $d dig3 == $b $c $d $a
}}
{ [dig2] dip swap }

define dig4 : ('a 'b 'c 'd 'e -> 'b 'c 'd 'e 'a)
{{
  test:
    in: 1 2 3 4 5 dig4
    out: 2 3 4 5 1
  semantics:
    $a $b $c $d $e dig3 == $b $c $d $e $a
}}
{ [dig3] dip swap }

